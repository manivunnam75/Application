@{
	Layout=null;
}
@model TrainnePortal.Models.Admin.LoginModel
<link rel="stylesheet" href="~/css/UserLogin.css" asp-append-version="true" />
<div class="container" id="container">
	
	<div class="form-container sign-in-container">
		<form method="post" asp-action="UserLogin">
			<h1>Sign in</h1>

			<span>or use your account</span>
			
			<input type="text" placeholder="Email" asp-for="UserName"/>
			<input type="password" placeholder="Password"  asp-for="Password"/>
			<a href="#">Forgot your password?</a>
			<button>Sign In</button>
		</form>
	</div>
	<form  method="get" asp-action="Registration">
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>To keep connected with us please login with your personal info</p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with Cognine</p>
				<button class="ghost">Sign Up</button>
			</div>
		</div>
	</div>
	</form>
</div>
